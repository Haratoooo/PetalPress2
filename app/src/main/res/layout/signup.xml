<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#645095"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/petalpress"
            android:contentDescription="PetalPress logo"
            android:layout_marginBottom="16dp"
            />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-up"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start your journey!"
            android:textColor="#E2D1F9"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:layout_marginBottom="5dp"
            android:textColor="#E2D1F9"
            android:textSize="14sp"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your E-mail"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Password"
            android:textColor="#E2D1F9"
            android:textSize="14sp"
            android:layout_gravity="left"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Confirm Password"
            android:textColor="#E2D1F9"
            android:textSize="14sp"
            android:layout_gravity="left"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Confirm your Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginTop="5dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="16dp" />

        <!-- Bottom Text -->
        <TextView
            android:id="@+id/signinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign-in"
            android:textColor="#DDCCF2"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            />


        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BB99E6"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#DDCCF2"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />

        <!-- Google Button -->
        <Button
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="  Sign up with Google"
            android:drawableStart="@drawable/ad"
            android:background="@drawable/rounded_border_button"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- Apple Button -->
        <Button
            android:id="@+id/appleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="  Sign up with Apple ID"
            android:drawableStart="@drawable/ad"
            android:background="@drawable/rounded_border_button"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
