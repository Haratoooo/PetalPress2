<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:padding="0dp">

    <!-- Background Glow (blurred gradient circle) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/blur_circle"
        android:contentDescription="Background Glow" />

    <!-- Petal Pattern Overlay -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/petal_background"
        android:contentDescription="Petal Background" />

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/topLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/petalpress"
        android:contentDescription="PetalPress Logo" />

    <!-- Title and Subtitle -->
    <LinearLayout
        android:id="@+id/textBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingHorizontal="32dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/noto_serif_semibold"
            android:gravity="left"
            android:text="Write\nDaily\nEntries!"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_serif"
            android:gravity="left"
            android:lineSpacingExtra="4dp"
            android:text="Reflect on your thoughts and emotions, one entry at a time."
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Dot Indicator -->
    <ImageView
        android:id="@+id/dotIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/dot_indicator_1"
        android:contentDescription="Onboarding Progress Dots" />

    <!-- CTA and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <TextView
            android:id="@+id/ctaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/noto_serif"
            android:text="Join us and start your journey!"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/white_border_button"
            android:fontFamily="@font/noto_serif"
            android:text="Letâ€™s Get Started"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
