<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:padding="0dp">

    <!-- Blurred gradient glow (back layer) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/blur_circle" />

    <!-- Petal watermark overlay -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/petal_background" />

    <!-- Centered Content (logo & title) -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Welcome to"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/noto_serif"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/petal_press_logo"
            android:layout_marginBottom="100dp"/>
    </LinearLayout>

    <!-- âœ… Button pinned to the bottom -->
    <TextView
        android:id="@+id/startWritingButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/white_border_button"
        android:gravity="center"
        android:text="Start Writing"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="34dp"/>
</RelativeLayout>
