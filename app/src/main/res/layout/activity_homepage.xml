<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="#D592DE">

    <!--  Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/homepage_background"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!--  Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#645095"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="16dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bonheur_royale"
            android:text="PetalPress"
            android:textColor="@android:color/white"
            android:textSize="31sp" />
    </LinearLayout>


    <!--  Scrollable Part -->
    <ScrollView
        android:layout_above="@+id/bottom_nav_wrapper"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="33dp"
                android:fontFamily="@font/noto_serif"
                android:paddingHorizontal="100dp"
                android:text="Your Story Matters"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="100dp"
                android:text="#WriteToBloom"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="29dp"
                android:gravity="center_vertical"
                android:background="@drawable/searchbar_bg">

                <!-- 🔍 Search Icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginEnd="8dp" />

                <!-- ✏️ Input Field -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Keyword"
                    android:textColorHint="#6BFFFFFF"
                    android:textColor="#6BFFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:padding="0dp"/>

                <!-- 📊 Filter Icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_filter"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!--  Recently Opened Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="10dp"
                android:text="Recently Opened"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="31dp"
                android:background="#80FFFFFF" /> <!-- white with 50% opacity -->


            <!--  Horizontal Scroll View -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="29dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--  Example Journal Card -->
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="134dp"
                            android:src="@drawable/hamilton"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Heart Archives"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Entries: 3"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>

                    <!-- Add more cards as needed -->
                </LinearLayout>
            </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <!--  Journals You Created Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingLeft="10dp"
                            android:text="Journals You Created"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

<!--                        Move right and left between pages here-->

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="31dp"
                        android:background="#80FFFFFF" /> <!-- white with 50% opacity -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="100dp">

                        <!-- 📓 Single Journal Card -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginBottom="14dp"
                            android:background="@drawable/journal_card_bg"
                            android:elevation="6dp">

                            <!-- Journal Image -->
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/hamilton"
                                android:layout_marginEnd="12dp" />

                            <!-- Title + Description -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hamilton..."
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/poppins_semibold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="A space to pour my thoughts during the calmest time of day — early mornings with coffee and silence."
                                    android:textColor="#CCFFFFFF"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_medium" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Repeat this card layout for Heart Archives & Wanderlight -->
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Wrapper for custom bottom nav background and menu -->
    <RelativeLayout
        android:id="@+id/bottom_nav_wrapper"
        android:layout_width="353.5dp"
        android:layout_height="71.27dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:background="@drawable/bottom_nav">

        <!-- The actual bottom nav -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            style="@style/CustomBottomNavStyle"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>
